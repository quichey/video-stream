# Add an "alert" alias for long-running commands
# Usage: sleep 10; alert
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'


# Load user-defined aliases from ~/.bash_aliases
if [ -f ~/.bash_aliases ]; then
    . ~/.bash_aliases
fi

# Enable programmable completion features if not already enabled
if ! shopt -oq posix; then
  if [ -f /usr/share/bash-completion/bash_completion ]; then
    . /usr/share/bash-completion/bash_completion
  elif [ -f /etc/bash_completion ]; then
    . /etc/bash_completion
  fi
fi

# Load Cloud Shell environment (Google-provided)
source /google/devshell/bashrc.google

##
## Personal environment variables
##
export DEPLOY_ENV='cloud'

# Add local bin to PATH (customize for your username/environment)
# Replace YOUR_USERNAME with actual username if you plan to share
export PATH="$HOME/.local/bin:$PATH"

# Environment variables for deployment
export PORT_CLIENT=8080
export PORT_SERVER=8080