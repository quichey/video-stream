{
  "name": "video-stream",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@mui/icons-material": "^6.0.2",
    "@mui/material": "^6.0.2",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "body-parser": "^1.20.2",
    "express": "^4.18.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router": "^7.6.1",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    // Normal React build (frontend)
    "start": "react-scripts start",
    "build": "react-scripts build",
    "postbuild": "node scripts/post-build.js ./build ./public",

    // Alternative frontend build using .env.html
    "build:html": "env-cmd -f .env.html react-scripts build",
    "postbuild:html": "node scripts/post-build.js ./build ./public",

    // Build daemon (server code) into ./daemon directory
    "build:daemon": "rimraf daemon && mkdir daemon && ncp src daemon",

    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "prettier-eslint": "^16.3.0",
    "ncp": "^2.0.0",
    "rimraf": "^3.0.2"
  }
}
